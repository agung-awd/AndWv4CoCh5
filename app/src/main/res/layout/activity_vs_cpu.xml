<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_blue"
    android:id="@+id/vs_cpu_parent"
    tools:context=".VsCPU">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="220dp"
        android:layout_height="180dp"/>

    <RelativeLayout
        android:id="@+id/rl_player"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/iv_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_win1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/comic_san"
            android:text=""
            android:textColor="@color/violet"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_win2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/comic_san"
            android:text=""
            android:textColor="@color/violet"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_player01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comic_san"
            android:text="Pemain 1"
            android:textColor="@color/light_blue"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_player02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comic_san"
            android:text="CPU "
            android:textColor="@color/light_blue"
            android:textSize="23sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_player"
        android:layout_marginLeft="25dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:id="@+id/fl_batu1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_shape">

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_batu1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_batu"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:id="@+id/fl_kertas1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_shape">

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_kertas1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_kertas" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:id="@+id/fl_gunting1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_shape">

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_gunting1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_gunting" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_player"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:id="@+id/fl_batu2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_shape">

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_batu2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_batu" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:id="@+id/fl_kertas2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_shape">

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_kertas2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_kertas" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:id="@+id/fl_gunting2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_shape">

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_gunting2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_gunting" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_player"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:rotation="350">

        <TextView
            android:id="@+id/tv_vs"
            android:fontFamily="@font/comic_san"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="VS"
            android:textColor="@color/red"
            android:textSize="68sp" />

    </LinearLayout>

